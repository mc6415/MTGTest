@using KenticoCloud.Delivery
@using Site.Web.Extensions
@using Site.Web.Models.ContentTypes

@{
    string isOnline = (bool)ViewBag.IsStreaming ? "Online Now!" : "Offline right now :(";
}

<script type="text/javascript">
    jQuery(document).on('click', '.mega-dropdown', function (e) {
        e.stopPropagation()
    })
</script>
<div class="container-fluid">
    <nav class="navbar navbar-default">
        <div class="navbar-header">
            <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".js-navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Mike The Gathering</a>
        </div>

        <div class="collapse navbar-collapse js-navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="dropdown mega-dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Events  <span class="glyphicon glyphicon-chevron-down pull-right"></span></a>
                    <ul class="dropdown-menu mega-dropdown-menu row">
                        <li class="col-sm-3">
                            <ul>
                                <li class="dropdown-header">Featured Cards</li>
                                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                                    <div class="carousel-inner">
                                        @if (Session["FeaturedDecks"] != null)
                                        {
                                            List<FeaturedDeck> decks = (List<FeaturedDeck>)Session["FeaturedDecks"];

                                            for (int i = 0; i < decks.Count; i++)
                                            {
                                                ViewBag.CarouselItemClass = i == 0 ? "item active" : "item";

                                                Html.RenderPartial("_NavbarCarouselItem", decks[i]);
                                            }
                                        }
                                    </div>
                                    <!-- End Carousel Inner -->
                                </div>
                                <!-- /.carousel -->
                                <li class="divider"></li>
                                <li><a href="#">View Previous Cards <span class="glyphicon glyphicon-chevron-right pull-right"></span></a></li>
                            </ul>
                        </li>
                        @{Html.RenderPartial("_NavbarList", (Site.Web.Models.Views.EventList)ViewBag.StandardEvents);}
                        @{ Html.RenderPartial("_NavbarList", (Site.Web.Models.Views.EventList)ViewBag.ModernEvents);}
                        <li class="col-sm-3">
                            <ul>
                                <li class="dropdown-header">Articles</li>
                                <li><a href="#">Deck Videos</a></li>
                                <li><a href="#">Other Games</a></li>
                                <li class="divider"></li>
                                <li><a href="#"><img src="https://png.icons8.com/twitch/nolan/64" title="Twitch" width="64" height="64"> @isOnline</a></li>
                                <li class="divider"></li>
                                <li class="dropdown-header">Newsletter</li>
                                <form class="form" role="form" action="">
                                    <div class="form-group">
                                        <label class="sr-only" for="email">Email address</label>
                                        <input type="email" class="form-control" id="email" placeholder="Enter email">
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-block">Sign in</button>
                                </form>
                            </ul>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
        <!-- /.nav-collapse -->
    </nav>
</div>